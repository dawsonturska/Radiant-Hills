# Global User Information
[user]
    name = Your Name
    email = your.email@example.com

# Core Git Settings
[core]
    autocrlf = true # Normalizes line endings
    safecrlf = warn # Warns about line ending issues
    ignoreCase = true # Useful on case-sensitive filesystems

# Settings to help manage large files in Unity projects
[filter "lfs"]
    clean = git-lfs clean -- %f
    smudge = git-lfs smudge -- %f
    required = true

# Recommended settings for merge and diff behavior in Unity projects
[diff]
    tool = vscode # Customize if you use a different diff tool
[merge]
    tool = vscode # Customize if you use a different merge tool
    conflictstyle = diff3 # Shows more context in conflicts

# Additional Git LFS configuration, useful for Unityâ€™s binary files
[lfs]
    required = true
    fetchinclude = "*.psd" # Example file types, customize as needed
    fetchinclude = "*.fbx"
    fetchinclude = "*.png"
    fetchinclude = "*.jpg"
    fetchinclude = "*.tga"

# Aliases for convenience
[alias]
    st = status
    co = checkout
    br = branch
    ci = commit
    lg = log --graph --oneline --decorate --all
    amend = commit --amend --no-edit